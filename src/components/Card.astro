---
import '../styles/global.css';
---

<div
  class="max-w-sm rounded overflow-hidden shadow-lg bg-white dark:bg-gray-800"
>
  <img
    class="w-full h-48 object-cover"
    src="/images/btmlogo.webp"
    alt="Card image"
  />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2 text-gray-900 dark:text-white">
      Card Title
    </div>
    <p class="text-gray-700 dark:text-gray-300 text-base">
      This is a sample description for the card component. You can customize
      this text.
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <button
      class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
    >
      Action
    </button>
  </div>
</div>
